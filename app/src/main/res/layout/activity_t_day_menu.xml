<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@color/colorPrimaryDark">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_intro"
        android:textStyle="bold"
        android:textColor="@color/lightPrimaryColor"
        android:textSize="20sp"
        android:textAlignment="center"
        android:background="@color/colorAccent"/>


    <ListView android:layout_height="0dp"
        android:layout_weight="1" android:id="@android:id/list"
        android:layout_width="fill_parent" android:background="@color/colorPrimaryDark"
        android:clickable="true">
    </ListView>

    <Button android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_margin="5dip"
        android:layout_gravity="end" android:id="@+id/ButtonViewCart"
        android:text="View Shopping Cart!"/>
</LinearLayout>

